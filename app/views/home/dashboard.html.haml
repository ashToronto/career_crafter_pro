%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    %button.navbar-toggler{type: "button", 'data-bs-toggle': "collapse", 'data-bs-target': "#sidebarMenu", 'aria-controls': "sidebarMenu", 'aria-expanded': "false", 'aria-label': "Toggle navigation"}
      %span.navbar-toggler-icon
    %a.navbar-brand{href: "/"}
      %strong
        %i.bi.bi-file-text-fill.me-1
        Documents:
      = current_user.resumes_count

%div.container-fluid
  %div.row
    %nav#sidebarMenu.col-md-3.col-lg-2.d-md-block.sidebar.collapse
      .position-sticky.pt-3
        %ul.nav.flex-column
          %li.nav-item
            = link_to 'Craft New Resume', new_resume_path, class: 'nav-link text-warning'
    %main.col-md-9.ms-sm-auto.col-lg-10.px-md-4.text-white
      .container.mt-4
        .row.row-cols-1.row-cols-md-2.g-4
          - @user_resumes.each do |resume|
            .col
              .card.hoverable
                .row.g-0
                  .col-md-4
                    .card-body
                      = image_tag "themes/#{resume.theme.name.downcase}.png", alt: resume.theme.name, class: "img-fluid resume-img-preview"
                  .col-md-4
                    .card-body
                      %h5.card-title= resume.first_name
                      %p.card-text= resume.job_title
                      %p.card-text= "#{resume.country}, #{resume.state}"
                      %p.card-text= resume.phone_number
                      %p.card-text= resume.email
                      %p.card-text
                        %small.text-muted= resume.created_at.strftime("%B %d, %Y")
                  .col-md-4
                    = render 'resumes/completion_pie_chart', resume: resume
                    .card-footer.d-flex.justify-content-between
                      .btn-group.mt-3.mt-md-0
                        = link_to resume_path(resume), class: 'btn btn-sm me-2' do
                          = image_tag('pencil.png', alt: 'Edit', width: "20")
                        = link_to download_pdf_resume_path(resume, format: :pdf), class: 'btn btn-sm me-2' do
                          %i.bi.bi-download.me-1
                          %span Download PDF
                        = form_for resume, method: :delete, data: { confirm: 'Are you sure you want to delete this resume?' } do
                          = button_tag(type: 'submit', class: 'btn btn-outline-danger btn-sm') do
                            = image_tag('trashcan.png', alt: 'Delete', width: "20")
