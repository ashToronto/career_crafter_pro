.container.pt-5
  .row.justify-content-center
    .col-md-6
      %h2 Resend confirmation instructions
      = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-group" }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :email, class: 'form-label'
          %br/
          = f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)
        .actions.mt-3
          = f.submit "Resend confirmation instructions", class: 'btn'
      = render "devise/shared/links"
