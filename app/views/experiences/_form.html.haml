= form_for([@resume, @experience]) do |f|
  - if @experience.errors.any?
    #error_explanation
      %h2
        = pluralize(@experience.errors.count, "error")
        prohibited this experience from being saved:
      %ul
        - @experience.errors.full_messages.each do |message|
          %li= message

  .form-group.mb-3
    = f.label :company_name, class: 'form-label'
    = f.text_field :company_name, class: 'form-control', required: true

  .form-group.mb-3
    = f.rich_text_area :content, class: 'form-control custom-text-area', placeholder: "- Highlight your career goals and achievments", required: true

  .form-group.mb-3
    = f.label :job_title, class: 'form-label'
    = f.text_field :job_title, class: 'form-control', required: true

  .row.mb-3
    .col-md-6
      = f.label :start_date, class: 'form-label'
      = f.date_field :start_date, class: 'form-control', required: true
    .col-md-6
      = f.label :end_date, class: 'form-label'
      = f.date_field :end_date, class: 'form-control'

  .row.mb-3
    .col-md-6
      .form-check.mb-3
        = f.check_box :current_work, class: 'form-check-input', id: 'currentWorkCheck'
        = f.label :current_work, class: 'form-check-label', for: 'currentWorkCheck'
    .col-md-6
      .form-check.mb-3
        = f.check_box :remote_work, class: 'form-check-input', id: 'remoteWorkCheck'
        = f.label :remote_work, class: 'form-check-label', for: 'remoteWorkCheck'

  = f.submit experience.new_record? ? 'Next' : 'Update Experience', class: 'btn-save'
