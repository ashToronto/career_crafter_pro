= form_for [@resume, @resume.theme || Theme.new], url: resume_theme_path(@resume), method: :put do |f|
  .theme-previews
    - @themes.each do |theme|
      .theme-preview
        = label_tag do
          = radio_button_tag 'resume[theme_id]', theme.id, @resume.theme_id == theme.id
          = image_tag "themes/#{theme.name.downcase}.png", alt: theme.name
          %p= theme.name
  = f.submit "Save Theme", class: "btn-save"

:css
  .theme-previews {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    padding: 30px;
  }
  .theme-preview {
    cursor: pointer;
  }
  .theme-preview img {
    width: 200px; /* Adjust based on your needs */
    height: auto;
  }
